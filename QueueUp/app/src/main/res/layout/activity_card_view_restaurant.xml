<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <!--    Ideal seria puxar imagem, nome e endereco do banco de dados    -->
        <ImageView
            android:id="@+id/imagemRestaurante"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/america" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeRestaurante"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="America - Alameda Santos"
                android:textColor="#4a4a4a"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/culinariaRestaurante"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Gastronomia Paulistana"
                android:textColor="#bebebe"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/distanciaRestaurante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.5 Km"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/bolinha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/bolinhaamarela" />

                <TextView
                    android:id="@+id/tempoFila"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/bolinha"
                    android:text="30 minutos" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>